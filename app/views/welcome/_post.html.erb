
<div class="center aligned item">

<% if post.image.present?%>
  <% if show_link%>
    <%= image_tag post.image.url(:medium), alt: "Post", :class => "product_image"%>
  <%else%>
    <%= image_tag post.image.url ,alt: "Post"%>
  <%end%>
<%end%>

<%if show_link %>
  <div class="content">
    <%= link_to post.title, post,:class =>"header"%>
  </div>
  <div class="description">
        <p><%= post.body %></p>
      </div>
<%else%>
  <div class="content">
    <b class="header"><%= post.title%></b>
  </div>
  <div class="description">
        <p><%= post.body %></p>
  </div>
<%end%>
  <div class="extra">
     <p><%= post.created_at%></p>
  </div>
</div>


