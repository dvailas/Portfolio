<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <h2 class="ui center aligned header">
      <img src="/assets/logo.png" width="100" height="100">
        <div class="content">
          Borealis Project
          <div class="sub header">A Portfolio by Dylan Vailas</div>
          <div class="ui inline dropdown">
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="header">Adjust time span</div>
              <div class="active item" data-text="today">Today</div>
              <div class="item" data-text="this week">This Week</div>
              <div class="item" data-text="this month">This Month</div>
            </div>
          </div>
        </div>
      </h2>

      <div class="ui center aligned inverted menu" id="mainMenu">
        <div class= "menu">
          <div class="item"><%= link_to 'Home',root_path%></div>
          <%Category.order(:name).each do |category|%>
            <div class="item"><%=link_to category.name, category%></div>
          <%end%>
        </div>
      </div>
    <%= yield %>
  </body>
</html>
