<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>


      <div class="ui center aligned inverted menu" id="mainMenu">
        <div class= "menu">
          <div class="item" id="home"><a href ="/">
            <img src="/assets/logo.png" width="100" height="100" id="logo">
            </a>
          </div>
          <%Category.order(:name).each do |category|%>
            <div class="item"><%=link_to category.name, category%></div>
          <%end%>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
